@model CQSLab.UI.ViewModels.CustomerEditVM

@{
    ViewBag.Title = "Customers. Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers. Edit</h2>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">Saved successfuly</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">@Html.Raw(@ViewBag.Error)</div>
}

@using (Html.BeginForm("Edit", "Customers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CustomerId)

    <div class="form-group">
        <label for="@Html.IdFor(p=>p.Name)" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name" })
        </div>
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(p=>p.Surname)" class="col-sm-2 control-label">Surname</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Surname" })
        </div>
    </div>
    <div class="form-group">
        <label for="@Html.IdFor(p=>p.Email)" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.ActionLink("Back", "Index", "Customers", null, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn-primary" data-action="save">Save</button>
        </div>
    </div>
}