@using Microsoft.Owin.Security
@model IEnumerable<Microsoft.Owin.Security.AuthenticationDescription>

@{
    ViewBag.Title = "Home Page";
}

<h2>Login.</h2>

<p>Eliga el proveedor externo para iniciar sesión</p>

@using (Html.BeginForm("ExternalLogin", "Account", new {ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <div id="socialLoginList">
        <p>
            @foreach (var authentication in Model)
            {
                <button type="submit" class="btn btn-default" id="@authentication.AuthenticationType" name="provider" value="@authentication.AuthenticationType" title="Log in using your @authentication.Caption account">@authentication.AuthenticationType</button>
            }
        </p>
    </div>
}